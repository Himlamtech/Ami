# APPLICATION
APP_PORT=6008
DEBUG=false

# OPENAI (LLM Provider)
OPENAI_API_KEY=OPENAI_API_KEY

# OpenAI Models for Thinking Modes (Optional - defaults provided)
OPENAI_MODEL_FAST=gpt-4-1106-preview
OPENAI_MODEL_BALANCE=gpt-4-0125-preview
OPENAI_MODEL_THINKING=o4-mini

#FIRECRAWL
FIRECRAWL_API_KEY=FIRECRAWL_API_KEY

# MONGODB (User & Document Management)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGO_USER=himlam
MONGO_PASSWORD=himlam
MONGO_DB=ami

# REDIS (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=himlam
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# QDRANT (Vector Store)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=himlam
QDRANT_COLLECTION_NAME=ami

# HUGGINGFACE (Embeddings)
HUGGINGFACE_EMBEDDING_MODEL=dangvantuan/vietnamese-document-embedding

# JWT AUTHENTICATION
JWT_SECRET_KEY=JWT_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (Frontend URLs)

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:6009,http://localhost:6008

# RAG CONFIGURATION
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
ENABLE_CACHE=true
CACHE_TTL=3600

# DOCUMENT PROCESSING
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.md,.html


# NOTES

# 1. Generate a strong JWT_SECRET_KEY:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. After setup, run:
#    make up              # Start all services
#    make create-admin    # Create first admin user
#    make migrate         # Import existing documents
#
# 3. Default admin credentials (CHANGE AFTER FIRST LOGIN):
#    Username: admin
#    Password: admin
#
# 4. Frontend runs on: http://localhost:6009
#    Backend API on: http://localhost:6008
#    API Docs: http://localhost:6008/docs

